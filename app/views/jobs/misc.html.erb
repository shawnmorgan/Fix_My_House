<% if @comments %>
<% @comments.each do |comment| %>
  <div>
    <strong><%= comment.user.name %></strong>
    <br />
    <p><%= comment.body %></p>
    
  </div>
<% end %>

<% end %>




<div class="field">
    <%= form_for @comment do |f| %>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
    <%= f.submit %>
    <% end %>
  </div>
  
  
  <p class="comment_name"><strong><%= comment.user.id %></strong></p>