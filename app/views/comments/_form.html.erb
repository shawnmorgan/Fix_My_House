<div class="row">
    <div class="col-md-8 well  new-job">
        <h3>Add Comments</h3>
    <%= form_for([@job, @job.comments.build]) do |f| %>
    <p><%= f.label :commenter %><br/>
    <%= f.text_field :commenter %></p>
    
    <br>
    <p><%= f.label :body %><br />
    <%= f.text_area :body %></p>
    <br>
    <%= f.submit class: "btn btn-success" %>
    <% end %>
    </div>
</div>